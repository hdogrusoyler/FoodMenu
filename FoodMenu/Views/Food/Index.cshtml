@model IEnumerable<Food>
@{
    ViewData["Title"] = "Index";
}

<div class="m-4">
    <div class="bg-success text-white p-4">
        Yemek Listesi
    </div>

    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Yemek Adı</th>
            <th>#</th>
            <th>#</th>
        </tr>
        </thead>
        <tbody>
        @if (Model?.Count() > 0)
        {
            @foreach (var item in Model)
             {
                 <tr>
                     <td>@item.FoodName</td>
                     <td>
                         <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.FoodId">
                             Düzenle
                         </a>
                     </td>
                     <td>
                         <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.FoodId">
                             Sil
                         </a>
                     </td>
                 </tr>

             }
        }
        else
        {
            <tr>
                <td colspan="3">Yemek Yok</td>
            </tr>
        }
        </tbody>
    </table>
    <td>
        <a class="btn btn-primary" asp-action="Edit">
            Yemek Ekle
        </a>
    </td>

</div>