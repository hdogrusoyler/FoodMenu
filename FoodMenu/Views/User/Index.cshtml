@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<div class="m-4">
    <div class="bg-success text-white p-4">
        Kullanıcı Listesi
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Kullanıcı Adı</th>
                <th>Kullanıcı SoyAdı</th>
                <th>Kullanıcı TCKN</th>
                <th>Kullanıcı Password</th>
                <th>Yönetici mi</th>
                <th>#</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count() > 0)
            {
                @foreach (var item in Model)
                {
            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.TCKN</td>
                <td>@item.Password</td>
                <td>@item.isAdmin</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.UserId">
                        Düzenle
                    </a>
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.UserId">
                        Sil
                    </a>
                </td>
            </tr>

                }
            }
            else
            {
                <tr>
                    <td colspan="3">Kullanıcı Yok</td>
                </tr>
            }
        </tbody>
    </table>
    <td>
        <a class="btn btn-primary" asp-action="Edit">
            Kullanıcı Ekle
        </a>
    </td>

</div>